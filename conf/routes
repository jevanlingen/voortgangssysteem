# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index()
GET		/getDashboards						controllers.Application.getDashboards()
POST	/createDashboard					controllers.Application.createDashboard()
POST	/deleteDashboard:id/delete			controllers.Application.deleteDashboard(id: Long)

# Settings
GET		/getDashboard/Settings:id			controllers.DashboardSettings.index(id: Long)
POST	/saveSetting:id						controllers.DashboardSettings.saveSetting(id: Long)

#Widgets
GET		/getDashboard/getProgressReport/:id	controllers.Dashboard.getProgressReport(id: Long)

# WidgetSettings
POST	/saveWidgets:id						controllers.Widget.saveWidgets(id: Long)

#Dashboard
GET		/getDashboard/:id					controllers.Dashboard.index(id: Long)
GET		/getDashboardForProject/:id			controllers.Dashboard.getProjects(id: Long)

# Javascript routing
GET		/assets/javascripts/routes			controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file						controllers.Assets.at(path="/public", file)
